
/* 										初始化页面 */
html,body,iframe,div,table,tr,td,ul,li,input,select,textarea{
	margin: 0px;
	padding: 0px;
}
html,body,iframe,div,table,tr,td,ul,li{
	border: 0px;
}
html,body,iframe{
	width: 100%;
	height: 100%;
	overflow: hidden;
}
table{
 	border-right:1px solid #999999; 
 	border-bottom:1px solid #999999; 
}
tr{
	height: 23px;
}
tr:nth-child(even){
	background: rgb(246,247,249);
}
th,td{
	border:1px solid #BBCDDB;
	border-left:0px;
	border-top:0px;	
	height: 28px;
}
.td-span{
/* 	决定大小 */
	display: block;
/* 	同一行 */
	white-space: nowrap;
/* 	点点点样式 */
	overflow: hidden;
	text-overflow: ellipsis;
}
.tr{
	clear: both;
}
.td{
	float: left;
}
body{
	border-left: 1px solid #ECEBEB;
	font-size: 13px;
	background-color: white;
	display: none;
}
.sm_line{
	display: block;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.sm_center{
	text-align: center;
}
.sm_number{
	text-align: right;
}

.sm_inputText,select{
	width: 150px;
}
.sm_copy{
	width: 50px;
	height:20px;
}
.mutiColor {
	background:rgb(246,247,249);
}
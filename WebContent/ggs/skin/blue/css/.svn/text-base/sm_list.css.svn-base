.sm_list .sm_index{
	text-align: center;
	/* background: #F8F9F5; */
	width: 30px;
}

.sm_list .sm_table_head{
	margin: 1px 1px 0px 1px;
	background: url("../image/list/headTd.png") repeat-x;
	border-left: 1px solid #999999;
	border-right: 1px solid #999999;
}
.sm_list .sm_table_head table{
	border-top: 0px;
	border-bottom: 0px;
	border: 0px
}

.sm_list .sm_table_head tr{
	height: 25px;
}

.sm_list .sm_table_head td{
	font-weight: bold;
	background: url("../image/list/headTd.png") repeat-x;
	text-align: center;
	border-top: 0px solid #999999;
	border-right: 1px solid #999999;
	border-bottom: 0px solid #999999;
	border-left: 0px solid #999999;
	cursor: col-resize;
}

.sm_list .sm_table_body{
	margin: 0px 0px 0px 1px;
}

.sm_list .sm_table_body table{
	border: 1px solid #BBCDDB;
	text-overflow: ellipsis;
	border-collapse: collapse;
}

.sm_list .sm_table_body table th, .sm_list .sm_table_body table td{
/* 	border-right: 1px solid #999999;
	border-bottom: 1px solid #999999; */
	border-top: 0px;
	border-left: 0px;
	border: 1px solid #bbcddb;
}

.sm_table_tr_color_change{
	background: #EDF7FF;
}

.sm_list_tr_click{
	color: red;
}
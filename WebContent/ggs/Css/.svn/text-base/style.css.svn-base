/**********************************************/
/*列表样式*/
/*列表页面dataGrid的div样式*/
div.d_grid
{
    height:86%;
    width:99.6%;
    margin:0 auto; 
	overflow:auto;
    position: absolute;
}
/*详细信息页面dataGrid的div样式*/
.dd_grid{
	margin:0 auto;
	margin-top:5px;
	border-top:1px solid #bfd8f6;
}
.dd_grid .x-grid{width:100%;}
.dd_grid .x-grid-hd-row{ position:static;}
.dd_grid .x-grid-cell-first{ position:static;}
/*DataGrid 引用的样式*/
.x-grid
{
	border-collapse:collapse;	
	border:1px solid #EDEDED;
	table-layout:auto;
}
.x-grid td{
	border-right:1px solid #bfd8f6;
	border-bottom:1px solid #bfd8f6;
	border:1px solid #bfd8f6;
	border-top:0px none;
	height:23px;
	padding: 0px 2px;
}
/*DataGrid表头引用的样式*/
.x-grid-hd-row{
	height:23px;
	border-left:1px solid #A6C2D7;
	width:100%;
	word-break:break-all;
	word-warp:nowarp;
	border-bottom:none;
	 /*position:relative;
    left:expression(0-document.getElementById('d_grid').scrollLeft);
   top:expression(document.getElementById('d_grid').scrollTop);*/
    position: relative; 
    top: expression(this.offsetParent.scrollTop); 
    z-index: 10;
}
.x-grid-hd-row td,
.x-grid-hd-no td
{
	/*border:1px solid #000;*/
	background:url('../images/bg/bg_btn2.gif');
	border-bottom:none;
	white-space:nowrap;
    font-weight:bold;
}
.x-grid-hd-row td a
{
	text-decoration:none;
}
.x-grid-hd-row td.x-grid-first-cell
{
	position: relative; 
    left: expression(this.parentElement.offsetParent.scrollLeft);
}
.x-grid-hd-row td{
	text-align:center;
}
.x-grid td.x-grid-cell-checker{
	text-align:center;
}
/*DataGrid第一列引用的样式*/
.x-grid-cell-first
{
	width:35px;
	background-attachment: scroll;
	background-repeat: repeat-y;
	background-position-x: right;
	background-position-y: center;
	background-color:#fff;/* transparent;*/
	text-align:right;
	background-image: url("../images/bg/grid3-special-col-bg.gif");
    position: relative;
    left: expression(this.parentElement.offsetParent.parentElement.scrollLeft);
	border-right:0px solid #bfd8f6;
	border-bottom:1px solid #bfd8f6;
}
.t_head{ display:none;}
.d_hid{ display:none;}


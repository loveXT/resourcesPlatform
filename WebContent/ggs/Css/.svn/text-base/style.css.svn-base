/*所有标签，margin、padding都设成0，所有字号12px*/
*,html, body, div, dl, dt, dd, ul, ol, li
{
	margin: 0;
	padding: 0;
	font-size:12px;
	text-align:left;
}
html,body,form
{
    height:100%;
    width:100%;
    overflow:hidden;
}
/*滚动条样式*/
body{

    SCROLLBAR-FACE-COLOR: #EEF4FF; 
	SCROLLBAR-HIGHLIGHT-COLOR: #ffffff; 
	SCROLLBAR-SHADOW-COLOR: #ffffff; 
	SCROLLBAR-3DLIGHT-COLOR: #ffffff; 
	SCROLLBAR-ARROW-COLOR: #f0b700; 
	SCROLLBAR-TRACK-COLOR: #ffffff; 
	SCROLLBAR-DARKSHADOW-COLOR: #253f5c;
 }
/*外围整个大的div,详细信息页面可以不用*/
div#div_body{
    height:100%;
    width:100%;
    overflow:hidden;
}
/*用于列表页面*/
div#div_list
{
    width:99.8%;
    height:99.5%;
    margin:0 auto;
    overflow:hidden;
}
/*用于详细信息页面*/
div#centent_body
{
    width:99.5%;
    height:99.5%;
    overflow:auto;
    margin:0 auto;
    border: 1px solid #A6C2D7;
    margin-top:1px;
}
div#div_list div#centent_body{ width:99.8%;}
/*用于左面有树的的页面-----左边*/
div#div_left{
    height:100%;
    width:19%;
    float:left;
    overflow:hidden;
}
div#leftTree{
	height:99.5%;
	width:98.5%;
	overflow:auto;
	margin-left:2px;
    border: 1px solid #A6C2D7;
    margin-top:1px;clear:both;
}
/*用于左面有树的的页面-----右边*/
div#div_right{
    height:100%;
    width:81%;
    float:right;
    overflow:hidden;
}
.clear{clear:both; width:100%;font-size:0px; display:none}
/*页面标题部分*/
.div_title
{
	height:40px; line-height:40px;
	font-weight:bold; font-size:large;
	padding: 10px;
	text-align: center;
	margin:0px auto;
	/*background:#F0F0F0;*/
}
/*详细信息页面的样式描述*/
.div_detailpage #header{
	position:absolute;top:2px;
	width:99.5%;
}
.div_detailpage .d_btn{
	position:absolute;top:27px;
	width:99.5%;
}
.div_detailpage .div_title{ padding-top:60px;}
/*详细信息页面--最下面按钮的样式*/
div.div_btn{
	padding: 10px; 
	text-align: center;
	margin:0px auto;
    height:21px;
	/*background:#F0F0F0;*/
}

a:visited {
